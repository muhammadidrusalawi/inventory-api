generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String   @id @default(uuid())
  name             String
  email            String   @unique
  password         String
  verified_at      DateTime?
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  stores Store[]

  @@map("users")
}

model Store {
  id          String   @id @default(uuid())
  owner_id    String?
  plan        String
  name        String
  description String?
  address     String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  owner User? @relation(fields: [owner_id], references: [id])

  @@map("stores")
  @@index([owner_id])
}